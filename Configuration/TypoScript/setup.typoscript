plugin.tx_contacts {
    view {
        templateRootPaths {
            0 = EXT:contacts/Resources/Private/Templates/
            1 = {$plugin.tx_contacts.view.templateRootPath}
        }

        partialRootPaths {
            0 = EXT:contacts/Resources/Private/Partials/
            1 = {$plugin.tx_contacts.view.partialRootPath}
        }

        layoutRootPaths {
            0 = EXT:contacts/Resources/Private/Layouts/
            1 = {$plugin.tx_contacts.view.layoutRootPath}
        }
    }

    persistence {
        storagePid = {$plugin.tx_contacts.persistence.storagePid}
    }

    settings {
        gmaps.width = 500px
        gmaps.heigth = 500px
        gmaps.scrollwheel = true
        gmaps.draggable = true
    }
}