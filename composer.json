{
    "name": "extcode/contacts",
    "type": "typo3-cms-extension",
    "description": "contacts",
    "homepage": "https://contacts.extco.de",
    "license": [
        "GPL-2.0+"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Contacts",
        "contacts"
    ],
    "authors": [
        {
            "name": "Daniel Lorenz",
            "email": "ext.contacts@extco.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/extcode/contacts/issues"
    },
    "require": {
        "php": ">=7.0.0 <7.3",
        "typo3/cms-core": "^8.7"
    },
    "require-dev": {
        "nimut/testing-framework": "^2.0 || ^3.0 || ^4.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\Contacts\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extcode\\Contacts\\Tests\\": "Tests"
        }
    },
    "replace": {
        "contacts": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}